<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HODLINFO</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
      integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="icon" href="https://hodlinfo.com/favicon.ico" type="image/png" sizes="16x16">
  </head>
  <body class="light-theme">
    <!-- Header -->
    <header id="header" class="light-theme">
      <nav class="theme-dark">
        <div class="logo-container">
          <img src="img/hodlinfo.png" alt="hodlinfo" class="fit-logo" />
        </div>

        <div class="last-container">
          <div class="mid-box-div">
            <select class="light-theme-text light-theme-v2">
              <option value="INR" selected>INR</option>
            </select>
          </div>
          <div class="mid-box-div">
            <select class="light-theme-text light-theme-v2" id="currency-selector" onclick="getvalue()">
              <option value="BTC" selected>BTC</option>
              <option value="XRP">XRP</option>
              <option value="ETH">ETH</option>
              <option value="TRX">TRX</option>
              <option value="EOS">EOS</option>
              <option value="ZIL">ZIL</option>
              <option value="BAT">BAT</option>
              <option value="ZRX">ZRX</option>
              <option value="REQ">REQ</option>
              <option value="NULS">NULS</option>
            </select>
          </div>
          <div class="mid-box-div light-theme-v2">
            <a
              class="Buy-header light-theme-text"
              href="https://wazirx.com/invite/sp7pvbt6?utm_source=finstreet&utm_medium=affiliate&utm_campaign=regnow-btn"
            >
              BUY USDT
            </a>
          </div>
        </div>

        <div class="last-container">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-12">
                <div id="revese-timer" data-minute="1"></div>
              </div>
            </div>
          </div>
          <a
            href="https://t.me/HodlInfoBot?startgroup=true"
            class="header-telegram"
          >
            <img src="img/telegram.png" class="telegram-img" alt="Telegram" />
            <p class="connect-telegram-text">Connect Telegram</p>
          </a>
          <div>
            <label class="switch">
              <input type="checkbox" />
              <span class="slider round light-theme-v2"></span>
            </label>
          </div>
        </div>
      </nav>
    </header>
    <!-- /Header -->
  </body>
</html>
